---
const personalImageAlt = "Aaron Ramirez"
import { useTranslations, getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);

const t = useTranslations(lang);

---

<article class="flex flex-col items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row">
  <div
    class="[&>p]:mb-4 [&>p>strong]:text-yellow-500 dark:[&>p>strong]:text-yellow-100 [&>p>strong]:font-normal [&>p>strong]:font-mono text-pretty order-2 md:order-1"
  >
    <p>
      {t('AboutMe.description')} <strong
        >{t('AboutMe.description.strong')}</strong
      >
    </p>

    <p>
      {t('AboutMe.description.more')} <strong
        >{t('AboutMe.description.more.strong')}</strong
      > {t('AboutMe.description.more.2')}
    </p>

    <p>
      {t('AboutMe.description.more.3')}<strong
        >{t('AboutMe.description.more.strong.2')} <em class="italic">{t('AboutMe.description.more.strong.3')}</em> {t('AboutMe.description.more.strong.4')} <em class="italic">{t('AboutMe.description.more.strong.5')}</em></strong
      > {t('AboutMe.description.more.6')} 
    </p>
  </div>

